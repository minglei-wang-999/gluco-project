/* Analyze button */
.analyze-button {
  margin: 20px auto 0;
  background-color: #3B82F6;
  color: white;
  border-radius: 20px;
  padding: 12px 0;
  width: 100%;
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  box-shadow: 0 2px 4px rgba(59, 130, 246, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

/* Analyze button in processing state */
.analyze-button-processing {
  background-color: #EF4444; /* Red background */
  cursor: not-allowed;
  box-shadow: none;
}

/* Analyze button in disabled state */
.analyze-button-disabled {
  background-color: #9CA3AF; /* Gray background */
  cursor: not-allowed;
  box-shadow: none;
  opacity: 0.8;
}

/* Progress fill inside button */
.analyze-button .progress-fill {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background-color: #3B82F6; /* Original blue color */
  z-index: 1;
  transition: width 0.3s ease;
}

/* Pulsing animation for pending state */
@keyframes pulse {
  0% { opacity: 0.6; }
  50% { opacity: 1; }
  100% { opacity: 0.6; }
}

/* Apply pulsing animation when width is 0% */
.analyze-button .progress-fill[style*="width: 0%"] {
  width: 10% !important; /* Override inline style */
  animation: pulse 1.5s infinite;
  background-color: #3B82F6; /* Keep the original blue color */
}

/* Text inside button should be above the progress fill */
.analyze-button text {
  position: relative;
  z-index: 2;
  color: white; /* Ensure text is white */
}

