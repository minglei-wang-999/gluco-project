/* Panel containing camera and controls */
.panel {
  width: 100%;
  background-color: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  margin-bottom: 16px;
}

.camera-container {
  width: 100%;
  height: 40vh; /* Increased from 33vh to 40vh */
  overflow: hidden;
  position: relative;
  background-color: #e0e0e0;
}

/* Controls section containing time selector and analyze button */
.controls-section {
  padding: 16px 16px 24px 16px; /* Increased bottom padding */
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
  background-color: white;
}

/* Tips Card */
.tips-card {
