.subscription-page {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-bottom: 40rpx;
}

.divider {
  height: 8px;
  background: #F0F0F0;
  margin: 16px 0;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.plan-selector {
  padding: 30rpx;
}

.plan-selector-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.error-message {
  color: #e74c3c;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.retry-button {
  background: #3498db;
  color: white;
  padding: 16rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.plans-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.plan-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.plan-card.recommended {
  border: 2rpx solid #3498db;
}

.plan-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.plan-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.plan-tag {
  background: #3498db;
  color: white;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-left: 16rpx;
}

.price-action-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.plan-price {
  display: flex;
  align-items: baseline;
  flex: 1;
}

.currency {
  font-size: 28rpx;
  color: #333;
  margin-right: 4rpx;
}

.amount {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.price-period {
  font-size: 24rpx;
  color: #666;
  margin-left: 8rpx;
}

.price-saving {
  font-size: 24rpx;
  color: #e74c3c;
  margin-left: 16rpx;
}

.plan-button {
  background: #3498db;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  min-width: 80rpx;
  text-align: center;
  margin-left: 20rpx;
  line-height: 1.5;
}

.plan-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.plan-features {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.feature-icon {
  color: #2ecc71;
  font-size: 28rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #666;
}

.upgrade-info {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #eee;
}

.upgrade-text {
  font-size: 28rpx;
  color: #666;
}

.upgrade-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #e74c3c;
}

.support-info {
  text-align: center;
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #666;
}

.support-link {
  color: #3498db;
  text-decoration: underline;
}

.no-upgrades-container {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.no-upgrades-message {
  font-size: 32rpx;
  color: #666;
  line-height: 1.5;
} 